{
  "name": "llm-manager",
  "private": true,
  "version": "1.0.0",
  "author": "Diogo Pereira",
  "description": "Gerenciador Local de Modelos LLM",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f"
  },
  "build": {
    "appId": "com.llmmanager.app",
    "productName": "LLM Manager",
    "copyright": "Copyright Â© 2024 Diogo Pereira",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "build/installerSidebar.bmp",
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "installerHeaderIcon": "public/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LLM Manager",
      "allowElevation": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.17.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  }
}